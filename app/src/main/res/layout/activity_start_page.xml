<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:layout_gravity="center">

    <Button
        android:id="@+id/btn_profesor"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp"
        android:text="@string/btn_profesor_text"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="#b93f3f"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/btn_student"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_profesor"
        android:layout_alignStart="@+id/btn_profesor"
        android:layout_alignLeft="@+id/btn_profesor"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="#b93f3f"
        android:text="@string/btn_student_text"
        android:textColor="#FFFFFF"/>

</RelativeLayout>