<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentSettingsChangePasswordActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/gradient">

    <EditText
        android:id="@+id/change_pass_et_new_pass"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/change_pass_et_new_pass_hint"
        android:inputType="textPassword"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/change_pass_et_confirm_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_pass_tv_title"
        android:importantForAutofill="no"
        tools:ignore="UnusedAttribute" />

    <EditText
        android:id="@+id/change_pass_et_confirm_pass"
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/change_pass_btn_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_pass_et_new_pass"
        android:background="@drawable/rounded_edittext"
        android:hint="@string/change_pass_et_confirm_password_hint"
        android:gravity="center"
        tools:ignore="Autofill" />

    <Button
        android:id="@+id/change_pass_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="142dp"
        android:layout_marginLeft="142dp"
        android:layout_marginEnd="142dp"
        android:layout_marginRight="142dp"
        android:layout_marginBottom="88dp"
        android:text="@string/change_pass_btn_save_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="#b93f3f"
        android:textColor="#FFFFFF"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/change_pass_tv_title"
        android:layout_width="234dp"
        android:layout_height="113dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:text="@string/change_pass_tv_title_text"
        android:textColor="@color/backgroundColor"
        android:textSize="24sp"
        app:fontFamily="@font/bangers"
        app:layout_constraintBottom_toTopOf="@+id/change_pass_et_new_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

</android.support.constraint.ConstraintLayout>